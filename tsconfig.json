{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "outDir": "./dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "typeRoots": [ "./types", "./node_modules/@types"]
    },
    "include": [
        "src/**/*"
    ]
}
