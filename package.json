{
  "name": "nodejs-seed",
  "version": "1.0.0",
  "description": "Nodejs + Hapi + Jest + Typescript + Graphql",
  "main": "src/Server.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:sylhero/nodejs-seed.git"
  },
  "keywords": [
    "nodejs",
    "Hapi",
    "Jest",
    "Typescript",
    "Graphql"
  ],
  "author": "Yulong Song <felixsong88@gmail.com>",
  "license": "ISC",
  "engines": {
    "node": ">=8.10.0",
    "npm": ">=5.6.0"
  },
  "jest-junit": {
    "output": "./coverage/junit/results.xml"
  },
  "devDependencies": {
    "@types/async": "2.0.50",
    "@types/hapi": "17.8.2",
    "@types/jest": "23.3.1",
    "@types/koa": "2.0.46",
    "@types/supertest": "2.0.5",
    "axios-mock-adapter": "1.15.0",
    "cross-env": "5.2.0",
    "jest": "23.4.2",
    "jest-junit": "5.1.0",
    "nodemon": "1.18.3",
    "rimraf": "2.6.2",
    "supertest": "3.1.0",
    "ts-jest": "23.1.3",
    "ts-node": "7.0.0",
    "tslint": "5.11.0",
    "tslint-config-airbnb": "5.9.2",
    "tslint-origin-ordered-imports-rule": "1.1.2",
    "typescript": "3.0.1"
  },
  "dependencies": {
    "apollo-server-hapi": "2.3.1",
    "async": "2.6.1",
    "axios": "0.18.0",
    "graphql": "14.1.0",
    "hapi": "17.8.1"
  },
  "scripts": {
    "dev": "npm run test:unit && cross-env NODE_ENV=development nodemon",
    "lint": "tslint --project .",
    "prod": "cross-env NODE_ENV=production ts-node ./src/Server.ts",
    "test:unit": "npm run lint && jest --config ./jest.config.json --coverage --forceExit --detectOpenHandles",
    "clean": "rimraf dist reports coverage .nyc_output"
