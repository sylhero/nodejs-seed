{
    "name": "nodejs-seed",
    "version": "1.0.0",
    "description": "Nodejs + Hapi + Jest + Typescript + Swagger",
    "main": "src/Server.ts",
    "repository": {
        "type": "git",
        "url": "git@github.com:sylhero/nodejs-seed.git"
    },
    "keywords": [
        "Nodejs",
        "Hapi",
        "Jest",
        "Typescript",
        "Swagger"
    ],
    "author": "Yulong Song <felixsong88@gmail.com>",
    "license": "ISC",
    "engines": {
        "node": ">=8.10.0",
        "npm": ">=5.6.0"
    },
    "jest-junit": {
        "output": "./coverage/junit/results.xml"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "3.1.0",
        "@typescript-eslint/parser": "3.1.0",
        "axios-mock-adapter": "1.18.1",
        "cross-env": "7.0.2",
        "eslint": "7.1.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-prettier": "3.1.3",
        "jest": "26.0.1",
        "jest-junit": "10.0.0",
        "nodemon": "2.0.4",
        "prettier": "2.0.5",
        "rimraf": "3.0.2",
        "supertest": "4.0.2",
        "ts-jest": "26.1.0",
        "ts-node": "8.10.2",
        "typescript": "3.9.3"
    },
    "dependencies": {
        "axios": "0.19.2",
        "fastify": "3.1.1",
        "fastify-cors": "3.0.3"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development nodemon",
        "lint": "eslint 'src/**/*.{js,ts,tsx}' --fix",
        "prod": "cross-env NODE_ENV=production ts-node ./src/Server.ts",
        "test:unit": "npm run lint && jest --config ./jest.config.json --coverage --forceExit --detectOpenHandles",
        "clean": "rimraf dist reports coverage .nyc_output"
    }
}
